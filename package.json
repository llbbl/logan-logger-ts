{
  "name": "logan-logger",
  "version": "1.1.11",
  "description": "Universal TypeScript logging library for all JavaScript runtimes",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.esm.js",
      "require": "./dist/node.js"
    },
    "./deno": {
      "types": "./dist/deno.d.ts",
      "import": "./dist/deno.esm.js",
      "require": "./dist/deno.js"
    },
    "./bun": {
      "types": "./dist/bun.d.ts",
      "import": "./dist/bun.esm.js",
      "require": "./dist/bun.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.esm.js",
      "require": "./dist/browser.js"
    }
  },
  "scripts": {
    "build": "pnpm build:clean && pnpm build:lib",
    "build:clean": "rm -rf dist",
    "build:lib": "vite build",
    "dev": "bun run src/index.ts",
    "test": "vitest run --reporter=default",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "logging",
    "logger",
    "typescript",
    "universal",
    "node",
    "deno",
    "bun",
    "browser",
    "winston"
  ],
  "author": "Logan Lindquist Land",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.6.0",
    "@vitest/ui": "^4.0.15",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "winston": "^3.8.0"
  },
  "peerDependenciesMeta": {
    "winston": {
      "optional": true
    }
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
